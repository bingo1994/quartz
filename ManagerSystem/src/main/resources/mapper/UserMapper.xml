<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.slcf.dao.DeptDao">

<resultMap type="com.slcf.pojo.DeptBean" id="DeptBeanResult"></resultMap>

<select id="getDeptByCon" parameterType="map" resultMap="DeptBeanResult">
select * from tb_dept
<where>
<if test="name!=null and name!=''">
and dept_name=#{name}
</if>
</where>
</select>

</mapper>